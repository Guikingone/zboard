{% extends 'layout_mentor.html.twig' %}

{% block title %} - {{ mentor.lastname }} {{ mentor.firstname }}{% endblock %}

{% block body %}

    {% for message in app.session.flashbag.get('success') %}
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><i class="icon fa fa-check"></i>Information</h4>
            {{ message }}
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-sm-4 col-md-5">
            <div class="box box-primary">
                <div class="box-body box-profile">
                    <img class="profile-user-img img-responsive img-circle" src="{{ asset('img/avatars/user-default.png') }}" alt="User profile picture">
                    <h3 class="profile-username text-center"><p>{{ mentor.firstname }} {{ mentor.lastname }}</p></h3>
                    <ul class="list-group list-group-unbordered">
                        <li class="list-group-item">
                            <b>Statut : </b>
                            <p class="pull-right">
                                {% if mentor.available == true %}
                                        <span class="label label-success">Disponible</span>
                                    {% else %}
                                        <span class="label label-danger">indisponible</span>
                                {% endif %}
                            </p>
                        </li>
                        <li class="list-group-item">
                            <b>Nombre d'élèves : </b> <p class="pull-right">{{ mentor.suivi|length }}</p>
                        </li>
                    </ul>
                    <a href="#" class="btn btn-primary btn-block" data-toggle="modal" data-target="#myModalContact"><b>Contacter par email</b></a>
                    {% if app.user == mentor %}
                        <a href="#" class="btn btn-warning btn-block" data-toggle="modal" data-target="#myModalCompetences"><b>Ajouter une compétences</b></a>
                    {% endif %}
                </div>
            </div>
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">A propos</h3>
                </div>
                <div class="box-body">
                    <strong>
                        <i class="fa fa-book margin-r-5"></i>Biographie
                    </strong>
                    <hr>
                    <strong>
                        <i class="fa fa-map-marker margin-r-5"></i>Emplacement
                    </strong>
                    <p class="text-muted">{{ mentor.country.libelle }}</p>
                    <hr>
                    <strong><i class="fa fa-pencil margin-r-5"></i> Compétences</strong>
                    <p>
                        {% for competences in mentor.competences %}
                            <span class="label label-warning">{{ competences.libelle }}</span>
                        {% endfor %}
                    </p>
                </div>
            </div>
        </div>
        <div class="col-sm-8 col-md-7 col-lg-7">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#activity" data-toggle="tab">Activités récentes</a></li>
                    <li><a href="#student" data-toggle="tab">Suivi Elèves</a></li>
                    {% if app.user.id == mentor.id %}
                        <li><a href="#sessions" data-toggle="tab">Suivi sessions</a></li>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="#settings" data-toggle="tab">Options</a></li>
                    {% endif %}
                </ul>
                <div class="tab-content">
                    <div class="active tab-pane" id="activity">
                        <div class="post">
                            <div class="user-block">
                                <img class="img-circle img-bordered-sm" src="{{ asset('img/avatars/user-default.png') }}" alt="user image">
                                <span class="username">
                                    <a href="#">{{ mentor.firstname }} {{ mentor.lastname }}</a>
                                </span>
                                <span class="description">Shared publicly - 7:30 PM today</span>
                            </div>
                            <p>
                                Lorem ipsum represents a long-held tradition for designers,
                                typographers and the like. Some people hate it and argue for
                                its demise, but others ignore the hate as they create awesome
                                tools to help create filler text for everyone from bacon lovers
                                to Charlie Sheen fans.
                            </p>
                        </div>
                    </div>
                    <div class="tab-pane" id="student">
                        <!-- Suivi elèves -->
                        {% if mentor.suivi is not empty %}
                        <div class="table-responsive">
                            <table class="table no-margin">
                                <thead>
                                <tr>
                                    <th>Nom Prenom</th>
                                    <th>Status</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for mentores in mentor.suivi %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('show_details_mentore', {'id': mentores.mentore.id}) }}">
                                                {{ mentores.mentore.lastname }} {{ mentores.mentore.firstname }}
                                            </a>
                                        </td>
                                        <td>
                                            {% if mentores.mentoreStatus == 'En formation' %}
                                                <span class="label label-success">{{ mentores.mentoreStatus }}</span>
                                            {% elseif mentores.mentoreStatus == 'Contacté' %}
                                                <span class="label label-warning">{{ mentores.mentoreStatus }}</span>
                                            {% elseif mentores.mentoreStatus == 'En pause' %}
                                                <span class="label label-danger">{{ mentores.mentoreStatus }}</span>
                                            {% elseif mentores.mentoreStatus == 'En attente' %}
                                                <span class="label label-warning">{{ mentores.mentoreStatus }}</span>
                                            {% elseif mentores.mentoreStatus == 'Formation terminé' %}
                                                <span class="label label-success">{{ mentores.mentoreStatus }}</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        {% else %}
                            <div class="alert alert-info alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                <h4><i class="icon fa fa-check"></i>Information</h4>
                                Aucun mentoré d'affecter.
                            </div>
                        {% endif %}
                    </div>
                    {% if app.user.id == mentor.id %}
                        <div class="tab-pane" id="sessions">
                            <!-- Suivi sessions -->
                            {% if mentor.sessions is empty %}
                                <p>Aucune session planifiée</p>
                            {% else %}
                            <ul class="timeline timeline-inverse">
                                {% for sessions in mentor.sessions %}
                                    <li class="time-label">
                                        <span class="bg-red">
                                            {{ sessions.dateSession|date('d-m-Y') }}
                                        </span>
                                    </li>
                                    <li>
                                        <i class="ion ion-clock bg-yellow"></i>
                                        <div class="timeline-item">
                                            <h3 class="timeline-header">
                                                Session planifiée avec
                                                <a href="{{ path('show_details_mentore', {'id': sessions.mentore.id}) }}">
                                                    {{ sessions.mentore.lastname }} {{ sessions.mentore.firstname }}
                                                </a>
                                            </h3>
                                            <div class="timeline-body">
                                                {{ sessions.libelle }}
                                            </div>
                                            <div class="timeline-footer">
                                                {% if sessions.status == 'Planifiee' %}
                                                    Statut : <span class="label label-warning">{{ sessions.status }}</span>
                                                {% elseif sessions.status == 'Present' %}
                                                    Statut : <span class="label label-success">{{ sessions.status }}</span>
                                                {% elseif sessions.status == 'Absent' %}
                                                    Statut : <span class="label label-danger">{{ sessions.status }}</span>
                                                {% elseif sessions.status == 'Annulee' %}
                                                    Statut : <span class="label label-danger">{{ sessions.status }}</span>
                                                {% elseif sessions.status == 'No Show' %}
                                                    Statut : <span class="label label-danger">{{ sessions.status }}</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                            {% endif %}
                        </div>
                    {% endif %}
                    <div class="tab-pane" id="settings">
                        <!-- Options -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include ':Form/Contact:register_mentor_contact.html.twig' %}

    {% include ':Form/Contact:register_mentor_message.html.twig' %}

    {% include ':Form:register_competences_mentor.html.twig' %}

{% endblock %}