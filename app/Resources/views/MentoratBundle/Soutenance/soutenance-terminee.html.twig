{% extends "::layout_mentor.html.twig" %}

{% block body %}
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title">Liste des soutenance que vous avez validé (ou pas)</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          {% if soutenances %}
            <table class="table table-bordered">
              <tr>
                <th style="width: 10px">#</th>
                <th>Prénom & Nom</th>
                <th>Parcours</th>
                <th>Etat de la formation</th>
                <th>Actions</th>
              </tr>
              {% for soutenance in soutenances %}
                <tr>
                  <td>{{ soutenance.id }}</td>
                  <td>{{ soutenance.mentore.firstname }} {{ soutenance.mentore.lastname }}</td>
                  <td>{{ soutenance.projet.libelle }}</td>
                  <td><span class="badge bg-success">Soutenance validée</span></td>
                  <td>
                    <button type="button" class="btn btn-primary">Voir le détail</button>
                  </td>
                </tr>
              {% endfor %}
            </table>
          {% else %}
            <div class="alert alert-info">Vous n'avez encore validé aucune soutenance. Patience !</div>
          {% endif %}
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
  </div>
{% endblock %}
