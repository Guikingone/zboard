{% extends 'layout_mentor.html.twig' %}

{% block title %} - Transfert de mentore{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-lg-push-4 col-lg-4 text-center">
                <div class="well">
                    {{ form_start(suivi) }}
                    <div class="form-group">
                        {{ form_errors(suivi.mentor) }}
                        {{ form_label(suivi.mentor, 'Mentor :') }}
                        {{ form_widget(suivi.mentor, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(suivi.suivi_state) }}
                        {{ form_label(suivi.suivi_state, 'Statut du mentorat :') }}
                        {{ form_widget(suivi.suivi_state, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <br />
                    <button type="submit" class="btn btn-flat btn-warning">
                        Enregistrer
                    </button>
                    {{ form_end(suivi) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
