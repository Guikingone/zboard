{% extends 'layout_mentor.html.twig' %}

{% block body %}

    {% for message in app.session.flashbag.get('success') %}
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><i class="icon fa fa-check"></i>Information</h4>
            {{ message }}
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-xs-12 col-md-offset-4 col-md-4">
            <div class="box box-primary">
                <div class="box-body box-profile">
                    <h3 class="profile-username text-center">Modifier le status d'un cours</h3>
                    <br />
                    <hr />
                    <div class="row">
                        <div class="col-xs-12 text-center">
                            {{ form_start(cours) }}
                            <div class="form-group">
                                {{ form_errors(cours.status) }}
                                {{ form_label(cours.status, 'Status souhait√© :')}}
                                {{ form_widget(cours.status, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <br>
                        <div class="text-center">
                            <input class="btn btn-warning" type="submit" value="Enregistrer" />
                        </div>
                        {{ form_end(cours) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
