{% extends "::layout_mentor.html.twig" %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Liste des mentorés en cours</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                {% if mentores %}
                    <table class="table table-bordered">
                        <tr>
                            <th style="width: 10px">#</th>
                            <th>Prénom & Nom</th>
                            <th>Parcours</th>
                            <th>Etat de la formation</th>
                            <th>Actions</th>
                        </tr>
                        {% for unMentore in mentores %}
                        <tr>
                            <td>{{ unMentore.id }}</td>
                            <td>{{ unMentore.mentore.firstname }} {{ unMentore.mentore.lastname }}</td>
                            <td>{{ unMentore.parcours.libelle }}</td>
                            <td><span class="label label-success">En cours</span></td>
                            <td>
                                <a type="button" class="btn btn-flat btn-primary" href="{{ path('show_details_mentore', {'id': unMentore.mentore.id}) }}">Détails</a>
                                <a type="button" class="btn btn-flat btn-warning" href="{{ path('transfert_mentore', {'id': unMentore.id}) }}">Transférer le mentoré</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    <div class="alert alert-info">Vous n'avez pas encore de mentoré d'assigné. Patience !</div>
                {% endif %}
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>
{% endblock %}
