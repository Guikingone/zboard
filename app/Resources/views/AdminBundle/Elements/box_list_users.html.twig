<div class="box-body">
    <div class="table-responsive">
        <table class="table no-margin">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Pays</th>
                    <th>Statut</th>
                    <th>Compétences</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>
                        <a href="{{ path('show_details_mentor', {'id': user.id}) }}">{{ user.lastname }}</a>
                    </td>
                    <td>
                        {{ user.firstname }}
                    </td>
                    <td>
                        {{ user.country.libelle }}
                    </td>
                    <td>
                        {% if user.available == true %}
                            <span class="label label-success">Disponible</span>
                        {% else %}
                            <span class="label label-danger">Indisponible</span>
                        {% endif %}
                    </td>
                    <td>
                        {% for competence in user.competences %}
                            <span class="label label-info">{{ competence.libelle }}</span>
                        {% endfor %}
                    </td>
                    <td>
                        <a href="#">
                                <button type="button" class="btn btn-flat btn-warning">Modifier <span class="ion ion-wrench"></span> </button>
                        </a>
                        {% if user.archived == false %}
                            <a type="button" class="btn btn-flat btn-danger" data-toggle="modal" data-target="#myModalArchivageTeacher">
                                Archiver <span class="ion ion-folder"></span>
                            </a>
                        {% else %}
                            <a type="button" class="btn btn-flat btn-danger" href="#">
                                Désarchiver <span class="ion ion-folder"></span>
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
