{% extends ':AdminBundle/Layout:administration.html.twig' %}

{% block title %} - Abonnements{% endblock %}

{% block admin_body %}
    {% for message in app.session.flashbag.get('success') %}
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><i class="icon fa fa-check"></i>Information</h4>
            {{ message }}
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <div class="well">
                <button type="button" class="btn btn-flat btn-warning" data-toggle="modal" data-target="#myModalAbonnements">
                    Ajouter un abonnement
                </button>
            </div>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Liste des abonnements</h3>
                </div>
                <div class="box-body">
                    <div class="table-responsive">
                        <table class="table no-margin">
                            <thead>
                            <tr>
                                <th>Titre</th>
                                <th>Prix</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for abonnements in abonnements %}
                                <tr>
                                    <td>
                                        {{ abonnements.libelle }}
                                    </td>
                                    <td>
                                        {{ abonnements.prix }}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include ':Form:register_abonnement.html.twig' %}

{% endblock %}
