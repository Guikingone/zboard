<!-- Left side column. contains the sidebar -->
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <p class="user-txt-blanc">Bienvenue {{ app.user.username }}</p>
        </div>
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li class="header">MENU PRINCIPAL</li>
            <li class="treeview {{ (controller == "mentore") ? "active" : "" }}">
                <a href="#">
                    <i class="ion ion-person-stalker"></i>
                    <span>Mes mentorés</span>
                    <span class="pull-right-container">
                  <i class="fa fa-angle-left pull-right"></i>
                </span>
                </a>
                <ul class="treeview-menu">
                    <li><a href="{{ path('en_attente') }}"><i class="fa fa-circle-o"></i> En attente</a></li>
                    <li><a href="{{ path('en_cours') }}"><i class="fa fa-circle-o"></i> En cours</a></li>
                    <li><a href="{{ path('mentorat_termine') }}"><i class="fa fa-circle-o"></i> Mentorat terminés</a></li>
                </ul>
            </li>
            <li class="treeview {{ (controller == "infos") ? "active" : "" }}"><a href="infos"><i class='fa fa-info-circle'></i> <span>Informations mentorat</span></a></li>
            {% if is_granted('ROLE_ADMIN') %}
                <li class="active treeview">
                    <a href="#">
                        <i class="fa fa-dashboard"></i>
                        <span>Administration</span>
                        <span class="pull-right-container">
                  <i class="fa fa-angle-left pull-right"></i>
                </span>
                    </a>
                    <ul class="treeview-menu">
                        <li><a href="{{ path('home_backend') }}"><i class="fa fa-circle-o"></i>Accès au backend</a></li>
                        <li><a href="{{ path('home_admin') }}"><i class="fa fa-circle-o"></i>Accès à l'administration</a></li>
                    </ul>
                </li>
                {% elseif is_granted('ROLE_SUPERVISEUR_MENTOR') %}
                    <li class="active treeview">
                        <a href="#">
                            <i class="fa fa-dashboard"></i>
                            <span>Administration</span>
                            <span class="pull-right-container">
                  <i class="fa fa-angle-left pull-right"></i>
                </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="{{ path('home_backend') }}"><i class="fa fa-circle-o"></i>Accès au backend</a></li>
                        </ul>
                    </li>
            {% endif %}
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>
