<div class="tab-pane" id="sessions">
    <!-- Suivi sessions -->
    <ul class="timeline timeline-inverse">
        {% for sessions in mentore.sessions|reverse %}
            <li class="time-label">
                                <span class="bg-red">
                                    {{ sessions.dateSession|date('d-m-Y H:i') }}
                                </span>
            </li>
            <li>
                <i class="ion ion-clock bg-yellow"></i>
                <div class="timeline-item">
                    <h3 class="timeline-header">
                        <a href="{{ path('show_details_mentor', {'id': sessions.mentor.id}) }}">
                            {{ sessions.mentor.firstname }} {{ sessions.mentor.lastname }}
                        </a>
                        a planifi√© une session
                    </h3>
                    <div class="timeline-body">
                        <strong>
                            {{ sessions.libelle }}
                        </strong>
                        <br />
                    </div>
                    <div class="timeline-footer">

                        {% include ':Elements/Box/Suivi:status.html.twig' %}

                        <br />
                        <br />
                        {% if sessions.mentor == app.user %}
                            <a href="{{ path('update_status_sessions', {'id': sessions.id, 'choice': 'Validation', 'mentore': sessions.mentore.id}) }}" class="ion-checkmark-circled"></a>
                            <a href="{{ path('update_status_sessions', {'id': sessions.id, 'choice': 'Annulation', 'mentore': sessions.mentore.id}) }}" class="ion-close-circled"></a>
                            <a href="{{ path('update_status_sessions', {'id': sessions.id, 'choice': 'Absent', 'mentore': sessions.mentore.id }) }}" class="ion-help-circled"></a>
                            <a href="{{ path('update_status_sessions', {'id': sessions.id, 'choice': 'No Show', 'mentore': sessions.mentore.id}) }}" class="ion-alert-circled"></a>
                        {% endif %}
                    </div>
                </div>
                <br />
            </li>
        {% endfor %}
    </ul>
</div>
