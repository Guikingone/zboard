{% extends "::layout_mentor.html.twig" %}

{% block fos_user_content %}
    <div class="row">
        <div class="col-md-3">

            <!-- Profile Image -->
            <div class="box box-primary">
                <div class="box-body box-profile">
                    <img class="profile-user-img img-responsive img-circle" src="{{ asset('img/avatars/user-default.jpg') }}" alt="User profile picture">

                    <h3 class="profile-username text-center">{{ app.user.username }}</h3>

                    <p class="text-muted text-center">{{ app.user.roles[0] }}</p>

                    <ul class="list-group list-group-unbordered">
                        <li class="list-group-item">
                            <b>Mentorés</b> <a class="pull-right">1,322</a>
                        </li>
                        <li class="list-group-item">
                            <b>Soutenances (2016)</b> <a class="pull-right">543</a>
                        </li>
                    </ul>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

            <!-- About Me Box -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">A propos</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <strong><i class="fa fa-map-marker margin-r-5"></i> Lieu de résidence</strong>
                    <p class="text-muted">Nantes, France</p>
                    <hr>
                    <strong><i class="fa fa-pencil margin-r-5"></i> Compétences</strong>
                    <p>
                        <span class="label label-danger">PHP</span>
                        <span class="label label-success">Symfony</span>
                        <span class="label label-info">Javascript</span>
                        <span class="label label-warning">Gestion de projet</span>
                    </p>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
        <div class="col-md-9">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#activity" data-toggle="tab">Historique d'activité</a></li>
                    <li><a href="#settings" data-toggle="tab">Paramètres du compte</a></li>
                </ul>
                <div class="tab-content">
                    <div class="active tab-pane" id="activity">
                        #TODO
                    </div>
                </div>
                <!-- /.tab-content -->
            </div>
            <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
{% endblock fos_user_content %}