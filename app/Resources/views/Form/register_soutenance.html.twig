<!-- Modal used in order to create a new soutenance -->
<div class="modal fade" id="myModalSoutenance" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-center" id="myModalLabel">Créer une soutenance</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12 text-center">
                            {{ form_start(soutenance) }}
                            <div class="form-group">
                                {{ form_errors(soutenance.mentor) }}
                                {{ form_label(soutenance.mentor, 'Mentor :')}}
                                {{ form_widget(soutenance.mentor, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_errors(soutenance.mentore) }}
                                {{ form_label(soutenance.mentore, 'Elève :')}}
                                {{ form_widget(soutenance.mentore, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_errors(soutenance.projet) }}
                                {{ form_label(soutenance.projet, 'Projet :')}}
                                {{ form_widget(soutenance.projet, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_errors(soutenance.status) }}
                                {{ form_label(soutenance.status, 'Statut :')}}
                                {{ form_widget(soutenance.status, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <br>
                            <button type="submit" class="btn btn-warning">Enregistrer</button>
                            {{ form_end(soutenance) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
            </div>
        </div>
    </div>
</div>
