<!-- Modal used in order to add a new teacher -->
<div class="modal fade" id="myModalVote" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            {{ form_start(vote) }}
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Voter</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12">
                      <div class="form-group">
                          {{ form_errors(vote.vote) }}
                          {{ form_label(vote.vote, 'Vote')}}
                          {{ form_widget(vote.vote, {'attr': {'class': 'form-control'}}) }}
                      </div>
                        <div class="form-group">
                            {{ form_errors(vote.commentaire) }}
                            {{ form_label(vote.commentaire, 'Message')}}
                            {{ form_widget(vote.commentaire, {'attr': {'class': 'form-control'}}) }}
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input class="btn btn-flat btn-warning" type="submit" value="Voter" />
                <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Annuler</button>
            </div>
            {{ form_end(vote) }}
        </div>
    </div>
</div>
