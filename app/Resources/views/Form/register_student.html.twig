<!-- Modal used in order to add a new student -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title text-center" id="myModalLabel">Ajouter un élève</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12 text-center">
                        {{ form_start(nMentore) }}
                        <div class="form-group">
                            {{ form_errors(nMentore.firstname) }}
                            {{ form_label(nMentore.firstname, 'Prenom')}}
                            {{ form_widget(nMentore.firstname, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(nMentore.lastname) }}
                            {{ form_label(nMentore.lastname, 'Nom')}}
                            {{ form_widget(nMentore.lastname, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(nMentore.address) }}
                            {{ form_label(nMentore.address, 'Adresse')}}
                            {{ form_widget(nMentore.address, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(nMentore.zipcode) }}
                            {{ form_label(nMentore.zipcode, 'Code postal')}}
                            {{ form_widget(nMentore.zipcode, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(nMentore.city) }}
                            {{ form_label(nMentore.city, 'Ville')}}
                            {{ form_widget(nMentore.city, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(nMentore.country) }}
                            {{ form_label(nMentore.country, 'Pays')}}
                            {{ form_widget(nMentore.country, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(nMentore.email) }}
                            {{ form_label(nMentore.email, 'Adresse email')}}
                            {{ form_widget(nMentore.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(nMentore.phone) }}
                            {{ form_label(nMentore.phone, 'Téléphone')}}
                            {{ form_widget(nMentore.phone, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(nMentore.resume) }}
                            {{ form_label(nMentore.resume, 'Bio')}}
                            {{ form_widget(nMentore.resume, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <hr>
                        <div class="form-group date" data-provide="datepicker">
                            {{ form_errors(nMentore.date_start) }}
                            {{ form_label(nMentore.date_start, 'Date de début')}}
                            {{ form_widget(nMentore.date_start, {'attr': {'class': 'form-control pull-right', 'placeholder': 'Ex: 12-05-2016'}}) }}
                        </div>
                        <hr>
                        <div class="form-group">
                            {{ form_errors(nMentore.financement) }}
                            {{ form_label(nMentore.financement, 'Financé')}}
                            {{ form_widget(nMentore.financement, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(nMentore.financeur) }}
                            {{ form_label(nMentore.financeur, 'Nom du financeur')}}
                            {{ form_widget(nMentore.financeur, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(nMentore.duree_financement) }}
                            {{ form_label(nMentore.duree_financement, 'Durée du financement')}}
                            {{ form_widget(nMentore.duree_financement, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(nMentore.suivi.mentor) }}
                            {{ form_label(nMentore.suivi.mentor, 'Mentor')}}
                            {{ form_widget(nMentore.suivi.mentor, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(nMentore.suivi.state) }}
                            {{ form_label(nMentore.suivi.state, 'Statut du mentorat')}}
                            {{ form_widget(nMentore.suivi.state, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(nMentore.suivi.parcours) }}
                            {{ form_label(nMentore.suivi.parcours, 'Parcours :')}}
                            {{ form_widget(nMentore.suivi.parcours, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <hr>
                        <div class="form-group">
                            {{ form_errors(nMentore.status) }}
                            {{ form_label(nMentore.status, 'Statut')}}
                            {{ form_widget(nMentore.status, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <br>
                        <button type="submit" class="btn btn-warning">Enregistrer</button>
                        {{ form_end(nMentore) }}
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
            </div>
        </div>
    </div>
</div>