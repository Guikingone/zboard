<!-- Modal used in order to add a new teacher -->
<div class="modal fade" id="myModalMentor" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            {{ form_start(mentor) }}
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Ajouter un mentor</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            {{ form_errors(mentor.firstname) }}
                            {{ form_label(mentor.firstname, 'Prénom')}}
                            {{ form_widget(mentor.firstname, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(mentor.lastname) }}
                            {{ form_label(mentor.lastname, 'Nom')}}
                            {{ form_widget(mentor.lastname, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(mentor.email) }}
                            {{ form_label(mentor.email, 'Adresse email')}}
                            {{ form_widget(mentor.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(mentor.address) }}
                            {{ form_label(mentor.address, 'Addresse')}}
                            {{ form_widget(mentor.address, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(mentor.zipcode) }}
                            {{ form_label(mentor.zipcode, 'Code postal')}}
                            {{ form_widget(mentor.zipcode, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(mentor.city) }}
                            {{ form_label(mentor.city, 'Ville')}}
                            {{ form_widget(mentor.city, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(mentor.phone) }}
                            {{ form_label(mentor.phone, 'Téléphone')}}
                            {{ form_widget(mentor.phone, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(mentor.available) }}
                            {{ form_label(mentor.available, 'Disponible :')}}
                            {{ form_widget(mentor.available, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_errors(mentor.country) }}
                            {{ form_label(mentor.country, 'Pays')}}
                            {{ form_widget(mentor.country, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input class="btn btn-flat btn-warning" type="submit" value="Enregistrer le mentor" />
                <button type="button" class="btn btn-flat btn-default" data-dismiss="modal">Annuler</button>
            </div>
            {{ form_end(mentor) }}
        </div>
    </div>
</div>
