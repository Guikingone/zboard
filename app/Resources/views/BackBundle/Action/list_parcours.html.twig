{% extends 'Layout/admin.html.twig' %}

{% block title %} - Parcours{% endblock %}

{% block admin_body %}
    {% for message in app.session.flashbag.get('success') %}
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><i class="icon fa fa-check"></i>Information</h4>
            {{ message }}
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-xs-12">
            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#myModalParcours">
                Ajouter un parcours
            </button>
            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#myModalFinanceur">
                Ajouter un financeur
            </button>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Liste des parcours</h3>
                </div>

                {% include 'BackBundle/Elements/box_parcours.html.twig' %}

            </div>
        </div>
    </div>

    {% include ':Form:register_entity.html.twig' %}

{% endblock %}