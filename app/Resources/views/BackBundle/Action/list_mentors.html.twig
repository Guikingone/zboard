{% extends 'Layout/admin.html.twig' %}

{% block title %} - Suivi des élèves{% endblock %}

{% block admin_body %}
    {% for message in app.session.flashbag.get('success') %}
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><i class="icon fa fa-check"></i>Information</h4>
            {{ message }}
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-xs-12">
            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#myModalM">
                Ajouter un mentor
            </button>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Liste des mentors</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>

                {% include 'BackBundle/Elements/box_mentors.html.twig' %}

            </div>
        </div>
    </div>

    {% include ':Form:register_user.html.twig' %}

{% endblock %}