<div class="box-body">
    <div class="table-responsive">
        <table class="table no-margin">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Pays</th>
                <th>Statut</th>
                <th>Nombre d'élèves</th>
                <th>Compétences</th>
                <th>Outils</th>
            </tr>
            </thead>
            <tbody>
            {% for mentors in mentors %}
            <tr>
                <td>
                    <a href="{{ path('show_details_mentor', {'id': mentors.id}) }}">{{ mentors.lastname }}</a>
                </td>
                <td>
                    {{ mentors.firstname }}
                </td>
                <td>
                    {{ mentors.country }}
                </td>
                <td>
                    {% if mentors.available == true %}
                        <span class="label label-success">Disponible</span>
                        {% else %}
                        <span class="label label-danger">Indisponible</span>
                    {% endif %}
                </td>
                <td>
                    <p>A définir</p>
                </td>
                <td>
                    <p>A définir</p>
                </td>
                <td>
                    <a href="{{ path('update_mentors', {'id': mentors.id}) }}"><span class="ion ion-wrench"></span></a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>