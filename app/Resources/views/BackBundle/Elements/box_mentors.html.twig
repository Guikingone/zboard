<div class="box-body">
    <div class="table-responsive">
        <table class="table no-margin">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Pays</th>
                <th>Statut</th>
                <th>Nombre d'élèves</th>
                <th>Compétences</th>
                {% if is_granted('ROLE_SUPERVISEUR_MENTOR') %}
                    <th>Actions</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for mentors in mentors %}
                <tr>
                    <td>
                        <a href="{{ path('show_details_mentor', {'id': mentors.id}) }}">{{ mentors.lastname }}</a>
                    </td>
                    <td>
                        {{ mentors.firstname }}
                    </td>
                    <td>
                        {{ mentors.country }}
                    </td>
                    <td>
                        {% if mentors.available == true %}
                            <span class="label label-success">Disponible</span>
                        {% else %}
                            <span class="label label-danger">Indisponible</span>
                        {% endif %}
                    </td>
                    <td>
                        {{ mentors.suivi|length }}
                    </td>
                    <td>
                        {% for competences in mentors.competences %}
                            <span class="label label-info">{{ competences.libelle }}</span>
                        {% endfor %}
                    </td>
                    {% if is_granted('ROLE_SUPERVISEUR_MENTOR') %}
                        <td>
                            <a href="{{ path('update_mentors', {'id': mentors.id}) }}">
                                <button type="button" class="btn btn-flat btn-warning">Modifier <span class="ion ion-wrench"></span> </button>
                            </a>
                            {% if mentors.archived == false %}
                                    <a type="button" class="btn btn-flat btn-danger" data-toggle="modal" data-target="#myModalArchivageTeacher">
                                       Archiver <span class="ion ion-folder"></span>
                                    </a>

                                {% include ':BackBundle/Action/Archivage:archivage_mentor.html.twig' %}

                                {% else %}
                                    <a type="button" class="btn btn-flat btn-danger" href="{{ path('out_archive_mentor', {'id': mentors.id }) }}">
                                        Désarchiver <span class="ion ion-folder"></span>
                                    </a>
                            {% endif %}
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>