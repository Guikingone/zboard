<div class="box-body">
    <div class="table-responsive">
        <table class="table no-margin">
            <thead>
            <tr>
                <th>Nom du parcours</th>
                <th>Niveau diplôme</th>
                {% if is_granted('ROLE_SUPERVISEUR_MENTOR') %}
                    <th>Actions</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
                {% for path in path %}
                <tr>
                    <td>
                        <b><a href="{{ path('show_parcours', {'id': path.id}) }}">{{ path.libelle }}</a></b>
                    </td>
                    <td>
                        {{ path.diplome }}
                    </td>
                    {% if is_granted('ROLE_SUPERVISEUR_MENTOR') %}
                        <td>
                            <a href="{{ path('update_parcours', {'id': path.id}) }}">
                                <button type="button" class="btn btn-flat btn-warning">Modifier <span class="ion ion-wrench"></span> </button>
                            </a>
                            {% if path.archived == false %}
                                <a type="button" class="btn btn-flat btn-danger" data-toggle="modal" data-target="#myModalArchivagePath">
                                    Archiver <span class="ion ion-folder"></span>
                                </a>

                                {% include ':BackBundle/Action/Archivage:archivage_path.html.twig' %}

                            {% else %}
                                <a type="button" class="btn btn-flat btn-danger" href="{{ path('out_archive_path', {'id': path.id }) }}">
                                    Désarchiver <span class="ion ion-folder"></span>
                                </a>
                            {% endif %}
                        </td>
                    {% endif %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>