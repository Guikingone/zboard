<div class="box-body">
    <div class="table-responsive">
        <table class="table no-margin">
            <thead>
            <tr>
                <th>Nom du parcours</th>
                <th>Niveau dipl√¥me</th>
                {% if is_granted('ROLE_SUPERVISEUR_MENTOR') %}
                    <th>Actions</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
                {% for path in path %}
                <tr>
                    <td>
                        <b><a href="{{ path('show_parcours', {'id': path.id}) }}">{{ path.libelle }}</a></b>
                    </td>
                    <td>
                        {{ path.diplome }}
                    </td>
                    {% if is_granted('ROLE_SUPERVISEUR_MENTOR') %}
                        <td>
                            <a href="{{ path('update_parcours', {'id': path.id}) }}">
                                <button type="button" class="btn btn-flat btn-warning">Modifier <span class="ion ion-wrench"></span> </button>
                            </a>
                            <a href="#">
                                <button type="button" class="btn btn-flat btn-danger">Archiver <span class="ion ion-folder"></span> </button>
                            </a>
                        </td>
                    {% endif %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>